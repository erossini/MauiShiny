<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:create="clr-namespace:Sample.Notifications.Create"
             x:DataType="create:ScheduleViewModel"
             x:Class="Sample.Notifications.Create.SchedulePage">
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Schedule Date" />
            <DatePicker Date="{Binding SelectedDate}" />

            <Label Text="Schedule Time" />
            <TimePicker Time="{Binding SelectedTime}" />

            <Button Text="Set Scheduled Date"
                    Command="{Binding Use}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>